						<AnchorPane minHeight="0.0" minWidth="600.0"
							styleClass="container">
							<children>
								<VBox spacing="10.0" AnchorPane.bottomAnchor="10.0"
									AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
									AnchorPane.topAnchor="10.0">
									<children>
										<HBox alignment="CENTER" spacing="5.0">
											<children>
												<Label text="Search for" HBox.hgrow="ALWAYS" />
												<TextField fx:id="searchTextField" promptText="Query"
													HBox.hgrow="SOMETIMES" />
												<Button fx:id="searchButton" defaultButton="true"
													mnemonicParsing="false" onAction="#searchButtonPressed"
													text="Search" HBox.hgrow="ALWAYS" />
											</children>
										</HBox>
										<StackPane VBox.vgrow="ALWAYS">
											<children>
												<ListView fx:id="bookList">
												</ListView>
												<ProgressIndicator fx:id="listProgress"
													maxHeight="50.0" maxWidth="50.0" />
											</children>
										</StackPane>
									</children>
								</VBox>
							</children>
						</AnchorPane>
						<AnchorPane minHeight="0.0" minWidth="500.0"
							styleClass="container">
							<children>
								<StackPane layoutX="-6.735429763793945" layoutY="-6.889407157897949"
									AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="-0.0"
									AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
									<children>
										<Icon awesomeIcon="BOOK" StackPane.alignment="TOP_RIGHT"
											size="" style="-fx-font-size: 3em; -fx-text-fill: gray;"
											styleClass="">
											<padding>
												<Insets right="10.0" top="10"/>
												
											</padding>
										</Icon>
										<VBox spacing="10.0" AnchorPane.bottomAnchor="10.0"
											AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
											AnchorPane.topAnchor="10.0">
											<children>
												<Label fx:id="titleLabel" styleClass="title1" text="Titel" />
												<Label fx:id="authorLabel" styleClass="title2" text="Aiuthorname" />
												<Label fx:id="descriptionLabel" prefWidth="500.0"
													text="SomeCooltext"
													wrapText="true" VBox.vgrow="NEVER" />
												<GridPane maxWidth="500.0" prefWidth="500.0">
													<columnConstraints>
														<ColumnConstraints halignment="CENTER"
															hgrow="NEVER" minWidth="10.0" />
														<ColumnConstraints hgrow="SOMETIMES"
															minWidth="10.0" />
													</columnConstraints>
													<rowConstraints>
														<RowConstraints minHeight="-Infinity"
															vgrow="SOMETIMES" />
														<RowConstraints minHeight="-Infinity"
															vgrow="SOMETIMES" />
													</rowConstraints>
													<children>
														<Button fx:id="rentButton" mnemonicParsing="false"
															onAction="#lendButtonPressed" text="Lend" />
														<Button fx:id="returnButton" mnemonicParsing="false"
															onAction="#returnButtonPressed" text="Return" />
														<TextField fx:id="lendTextField" promptText="MemberID"
															GridPane.columnIndex="1">
															<GridPane.margin>
																<Insets left="10.0" />
															</GridPane.margin>
														</TextField>
														<Label fx:id="returnName" text="MemberID"
															GridPane.columnIndex="1">
															<padding>
																<Insets left="10.0" />
															</padding>
														</Label>
													</children>
												</GridPane>
												<Label fx:id="errorLabel" alignment="CENTER"
													contentDisplay="CENTER" maxWidth="1.7976931348623157E308"
													styleClass="errorLabel" text="Label" textAlignment="CENTER" />
											</children>
											<padding>
												<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
											</padding>
										</VBox>
										<ProgressIndicator fx:id="detailProgress"
											maxHeight="50.0" maxWidth="50.0" />
									</children>
								</StackPane>
							</children>
						</AnchorPane>
					</items>
				</SplitPane>
			</children>
		</StackPane>
	</children>
